---
layout: base.njk
---

<article class="post">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
            {% if tags %}
                <div class="post-tags">
                    {% for tag in tags %}
                        {% if tag !== "blog" %}
                            <a href="/tags/{{ tag | slugify }}/" class="tag">{{ tag }}</a>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </header>
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>

<nav class="post-nav">
    {% if previousPost %}
        <a href="{{ previousPost.url }}" class="prev-post">← {{ previousPost.data.title }}</a>
    {% endif %}
    {% if nextPost %}
        <a href="{{ nextPost.url }}" class="next-post">{{ nextPost.data.title }} →</a>
    {% endif %}
</nav>
